<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:id="@android:id/background">
            <shape>
                <corners android:radius="10dip"/>
                <gradient android:angle="180" android:endColor="#ff747674"
                    android:centerY="0.75" android:centerColor="#ff5a5d5a"
                    android:startColor="#ff9d9e9d"/>
            </shape>
        </item>
    <item android:id="@+id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip"/>
                <gradient android:angle="180" android:endColor="#ffdddddd"
                    android:centerY="0.75" android:centerColor="#ffdddddd"
                    android:startColor="#ffdddddd"/>
            </shape>
        </clip>
    </item>
</layer-list>